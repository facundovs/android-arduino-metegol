<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/futbol_saha_1"
    tools:context="edu.soa.tp.activities.GameActivity">


    <TextView
        android:text="Eje X:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="66dp"
        android:id="@+id/XtextView"
        android:textSize="24sp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/luzTextView" />

    <TextView
        android:text="Eje Y:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="29dp"
        android:id="@+id/YtextView"
        android:textSize="30sp"
        android:layout_below="@+id/XtextView"
        android:layout_alignParentStart="true" />


    <TextView
        android:text="Luz/NoLuz"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="134dp"
        android:id="@+id/luzTextView"
        android:layout_below="@+id/YtextView"
        android:layout_centerHorizontal="true"
        android:textSize="30sp" />

    <TextView
        android:text="Eje Z:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ZtextView"
        android:textSize="30sp"
        android:layout_below="@+id/YtextView"
        android:layout_alignParentStart="true"
        android:layout_marginTop="38dp" />

    <TextView
        android:text="Puntaje:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/puntajeTextView"
        android:textSize="30sp"
        android:textStyle="normal|bold"
        android:layout_above="@+id/flecha_izq_black"
        android:layout_alignEnd="@+id/YtextView" />

    <TextView
        android:text="0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/scoreTextView"
        android:textSize="30sp"
        android:textStyle="normal|bold"
        android:layout_alignBaseline="@+id/puntajeTextView"
        android:layout_alignBottom="@+id/puntajeTextView"
        android:layout_alignEnd="@+id/luzTextView" />

    <ImageView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_weight="2"
        android:id="@+id/flecha_der"
        android:background="@drawable/ic_action_arrow_right"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true">
    </ImageView>

    <ImageView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_weight="2"
        android:id="@+id/flecha_izq"
        android:background="@drawable/ic_action_arrow_left"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginStart="15dp"
        android:layout_alignBottom="@+id/luzTextView"
        android:layout_alignParentStart="true">
    </ImageView>

    <ImageView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_weight="2"
        android:id="@+id/flecha_izq_black"
        android:background="@drawable/ic_arrow_back_black_60px"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_below="@+id/flecha_izq"
        android:layout_alignStart="@+id/flecha_izq"
        android:layout_marginTop="28dp">
    </ImageView>

    <ImageView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_weight="2"
        android:id="@+id/flecha_der_black"
        android:background="@drawable/ic_arrow_forward_black_60px"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginEnd="15dp"
        android:layout_below="@+id/luzTextView"
        android:layout_alignEnd="@+id/flecha_der">
    </ImageView>

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/flecha_der"
        android:layout_centerHorizontal="true"
        android:id="@+id/goalTextView"
        android:textAppearance="@style/TextAppearance.AppCompat.Display2" />


</RelativeLayout>
