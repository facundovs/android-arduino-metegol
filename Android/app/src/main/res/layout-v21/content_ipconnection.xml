<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_ipconnection"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/background"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="edu.soa.tp.activities.IPConnectionActivity"
    tools:showIn="@layout/activity_ipconnection">

    <EditText
        android:layout_width="wrap_content"
        android:textCursorDrawable="@drawable/color_cursor"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:layout_above="@+id/acceptButton"
        android:layout_marginBottom="17dp"
        android:ellipsize="start"
        android:gravity="center_horizontal"
        android:id="@+id/ipText"
        tools:ignore="LabelFor"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:textColor="?android:attr/textColorPrimary"

        style="@android:style/Widget.DeviceDefault.Light.AutoCompleteTextView"
        android:backgroundTint="@android:color/darker_gray"
        android:background="@android:color/darker_gray"
        android:textColorLink="?android:attr/colorPrimary"></EditText>

    <Button
        android:text="@string/usar_la_ip_por_defecto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/defaultIpButton"
        style="@android:style/Widget.DeviceDefault.Button.Inset"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="66dp" />

    <Button
        android:text="@string/acept"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="83dp"
        android:id="@+id/acceptButton"
        style="@android:style/Widget.DeviceDefault.Button.Inset"
        android:layout_above="@+id/defaultIpButton"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text="@string/metegol"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="86dp"
        android:id="@+id/titleTextView"
        android:textAppearance="@style/TextAppearance.AppCompat.Display2"
        android:fontFamily="@string/metegol"
        tools:fontFamily="sans-serif"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />
</RelativeLayout>
