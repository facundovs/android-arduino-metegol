<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/futbol_saha_1"
    tools:context="edu.soa.tp.activities.GameActivity">
    <ImageView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_weight="2"
        android:id="@+id/flecha_izq"
        android:background="@drawable/ic_action_arrow_left"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginStart="22dp"
        android:layout_alignTop="@+id/flecha_der"
        android:layout_alignParentStart="true">
    </ImageView>
    <ImageView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_weight="2"
        android:id="@+id/flecha_der"
        android:background="@drawable/ic_action_arrow_right"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginEnd="25dp"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true">
    </ImageView>

    <ImageView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_weight="2"
        android:id="@+id/flecha_der_black"
        android:background="@drawable/ic_arrow_forward_black_60px"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="14dp">
    </ImageView>

    <ImageView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_weight="2"
        android:id="@+id/flecha_izq_black"
        android:background="@drawable/ic_arrow_back_black_60px"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_alignTop="@+id/flecha_der_black"
        android:layout_alignParentStart="true"
        android:layout_marginStart="10dp">
    </ImageView>

    <TextView
        android:text="Luz/NoLuz"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/luzTextView"
        android:textSize="30sp"
        android:layout_marginBottom="17dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />
    <TextView
        android:text="0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/scoreTextView"
        android:textSize="30sp"
        android:textStyle="normal|bold"
        android:layout_alignBaseline="@+id/puntajeTextView"
        android:layout_alignBottom="@+id/puntajeTextView"
        android:layout_toEndOf="@+id/puntajeTextView" />
    <TextView
        android:text="Eje Y:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/YtextView"
        android:textSize="30sp"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/flecha_izq" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/flecha_der"
        android:layout_centerHorizontal="true"
        android:id="@+id/goalTextView"
        android:textAppearance="@style/TextAppearance.AppCompat.Display2" />

    <TextView
        android:text="Puntaje:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/puntajeTextView"
        android:textSize="30sp"
        android:textStyle="normal|bold"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/luzTextView" />
</RelativeLayout>
